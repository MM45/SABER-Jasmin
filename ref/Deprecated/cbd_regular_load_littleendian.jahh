/*** cbd_regular_load_littleendian.jahh: File containing the Jasmin implementation of the load_littleendian function from cbd.c, with (regular) SABER parameters ***/

#ifndef LOAD_LITTLEENDIAN_HH
#define LOAD_LITTLEENDIAN_HH

#include "SABER_params.jahh"

inline fn load_littleendian(stack u8[4] x) -> reg u32
{
	inline int i;

	reg u32 t;
	reg u32 r;

	r = (32u) x[0];

	for i = 1 to 4 {
		t = (32u) x[i];
		t <<= (8 * i);
		r |= t;
	}

	return r;
}

#endif